{
    "extends": "eslint:recommended",

    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
        "es6": true,
        "node": true
    },

    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-console": "off",
        "no-var": "error",
        "prefer-const": "error",
        "comma-dangle": "error",
        "indent": ["error", 2]
    }
}